JWT_SECRET={{ kutt_environment_variables_jwt_secret }}

PORT={{ kutt_container_http_port }}
DEFAULT_DOMAIN={{ kutt_hostname }}
DISALLOW_REGISTRATION={{ kutt_environment_variables_disallow_registration | to_json }}
DISALLOW_ANONYMOUS_LINKS={{ kutt_environment_variables_disallow_anonymous_links | to_json }}
TRUST_PROXY={{ kutt_environment_variables_trust_proxy | to_json }}

{% if kutt_database_type == 'better-sqlite3' %}
DB_CLIENT=better-sqlite3

{% if kutt_database_filename %}
DB_FILENAME={{ kutt_database_filename }}
{% endif %}

{% endif %}

{% if kutt_database_type == 'mysql2' %}
DB_CLIENT=mysql2
DB_HOST={{ kutt_database_mysql_hostname }}
DB_PORT={{ kutt_database_mysql_port }}
DB_USER={{ kutt_database_mysql_username }}
DB_PASSWORD={{ kutt_database_mysql_password }}
DB_SSL={{ kutt_database_mysql_ssl | to_json }}
DB_NAME={{ kutt_database_name }}
{% endif %}

{% if kutt_database_type == 'pg' %}
DB_CLIENT=pg
DB_HOST={{ kutt_database_postgres_hostname }}
DB_PORT={{ kutt_database_postgres_port }}
DB_USER={{ kutt_database_postgres_username }}
DB_PASSWORD={{ kutt_database_postgres_password }}
DB_SSL={{ kutt_database_postgres_ssl | to_json }}
DB_NAME={{ kutt_database_name }}
{% endif %}

{% if kutt_redis_hostname %}
REDIS_ENABLED=true
REDIS_HOST={{ kutt_redis_hostname }}
REDIS_PORT={{ kutt_redis_port }}

{% if kutt_redis_password %}
REDIS_PASSWORD={{ kutt_redis_password }}
{% endif %}

REDIS_DB={{ kutt_redis_database }}
{% endif %}

ENABLE_RATE_LIMIT={{ kutt_environment_variables_enable_rate_limit | to_json }}

{% if kutt_environment_variables_smtp_enabled %}
MAIL_ENABLED={{ kutt_environment_variables_smtp_enabled | to_json }}
MAIL_HOST={{ kutt_environment_variables_smtp_host }}
MAIL_PORT={{ kutt_environment_variables_smtp_port }}

{% if kutt_environment_variables_smtp_user %}
MAIL_USER={{ kutt_environment_variables_smtp_user }}
{% endif %}

{% if kutt_environment_variables_smtp_password %}
MAIL_PASSWORD={{ kutt_environment_variables_smtp_password }}
{% endif %}

MAIL_FROM={{ kutt_environment_variables_smtp_from }}
MAIL_SECURE={{ kutt_environment_variables_smtp_secure | to_json }}

{% endif %}

REPORT_EMAIL={{ kutt_environment_variables_report_email }}
CONTACT_EMAIL={{ kutt_environment_variables_contact_email }}

{{ kutt_environment_variables_additional_variables }}
