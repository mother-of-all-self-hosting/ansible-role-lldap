[Unit]
Description=Kutt ({{ kutt_identifier }})
{% for service in kutt_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in kutt_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ kutt_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ kutt_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ kutt_identifier }} \
      --log-driver=none \
      --user={{ kutt_uid }}:{{ kutt_gid }} \
      --cap-drop=ALL \
      --network={{ kutt_container_network }} \
      {% if kutt_container_http_host_bind_port %}
      -p {{ kutt_container_http_host_bind_port }}:{{ kutt_container_http_port }} \
      {% endif %}
      --env-file={{ kutt_base_path }}/env \
      --label-file={{ kutt_base_path }}/labels \
      --mount type=bind,src={{ kutt_customization_path }},dst=/kutt/custom \
      --mount type=bind,src={{ kutt_data_path }},dst=/kutt/db \
      {% for volume in kutt_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in kutt_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ kutt_container_image_self_build_name if kutt_container_image_self_build else kutt_container_image }}

{% for network in kutt_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ kutt_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ kutt_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ kutt_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ kutt_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ kutt_identifier }}

[Install]
WantedBy=multi-user.target
